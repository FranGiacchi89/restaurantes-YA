<div class="container-last-restaurant">
  <div id="header">
    <h1 class="mt-5 mb-5">Nuestros Restaurantes</h1>
  </div>
  <div class="row mb-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col-4 mb-5">
        <section class="articles">
          <article>
            <div class="article-wrapper">
              <figure>
                <%= image_tag restaurant.photo %>
              </figure>
              <div class="article-body">
                <h2> <%= restaurant.name.truncate(8) %> </h2>
                <p> <%= restaurant.description.truncate(15) %> </p>
                <a href="/restaurants/<%= restaurant.id %>"  class="read-more">
                  Saber mas <span class="sr-only">about this is some title</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </section>
      </div>
    <% end %>
  </div>
</div>
