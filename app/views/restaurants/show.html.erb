<script>
  AOS.init();
</script>
<div data-aos="zoom-in">
  <div class="container mt-5 w-75 bg-white p-4 rounded-4 card-show">
    <div class="row">
      <div class="col-6">
        <% if @restaurant.photo.attached? %>
            <%= image_tag @restaurant.photo, class: "w-100" %>
        <% else %>
          <%= image_tag "logo.jpg", :size=>"450x450" %>
        <% end %>
      </div>
      <div class="col-6 px-5">
        <h1> <%= @restaurant.name %> </h1>
        <p class="card_paragraph">  <%= @restaurant.description %> </p>
        <div>
          <%= link_to "Volver", restaurants_path, class: "btn-restaurant mt-5" %>
          <%= link_to edit_restaurant_path(@restaurant) do %>
            <i class="fa-solid fa-pencil"></i>
          <% end %>
          <%= link_to restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Estas seguro?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
          <%#= link_to "Eliminar", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Estas seguro?"}, class: "btn-restaurant mt-5" %>
        </div>
      </div>
    </div>
  </div>
</div>
