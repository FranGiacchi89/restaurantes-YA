<script>
  AOS.init();
</script>
<div data-aos="zoom-in">
  <div class="container mt-5 w-75 bg-white p-4 rounded-4 card-show">
    <div class="row">
      <div class="col-6">
        <% if @restaurant.photo.attached? %>
          <div class="img-show">
            <%= image_tag @restaurant.photo, class: "w-100" %>
          </div>
        <% else %>
          <%= image_tag "logo.jpg" %>
        <% end %>
      </div>
      <div class="col-6 px-5">
        <h1> <%= @restaurant.name %> </h1>
        <p class="card_paragraph">  <%= @restaurant.description %> </p>
        <p> <%= link_to "Volver", restaurants_path, class: "btn-restaurant mt-5" %> </p>
      </div>
    </div>
  </div>
</div>


















