<div class="container w-50 bg-white mt-5 p-3 shadow-lg rounded border">
  <div class="row">
    <div class="col">
      <%= form_with model: @restaurant do |f| %>
        <%= f.label :Nombre, calss: "form-label" %>
        <%= f.text_field :name, class: "form-control mb-3" %>
        <%= f.label :Dirección, calss: "form-label" %>
        <%= f.text_field :address, class: "form-control mb-3" %>
        <%= f.label :Especialidad, calss: "form-label" %>
        <%= f.text_field :specialty, class: "form-control mb-3" %>
        <%= f.label :Descripción, calss: "form-label" %>
        <%= f.text_field :description, class: "form-control mb-3" %>
        <%= f.label :Imagen, calss: "form-label" %>
        <%= f.file_field :photo, class: "form-control mb-3" %>
        <%= f.submit "Crear", class: "mt-3 btn" %> <%= link_to "Volver", restaurants_path, class: "btn-new btn-warnign mt-3" %>
      <% end %>
    </div>
  </div>
</div>
