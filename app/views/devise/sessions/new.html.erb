<div class="container mt-5 w-75 shadow bg-white p-4">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-title">
          <h2>Bienvenidos</h2>
        </div>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Ingresar", class: "btn btn-primary w-100 mb-3" %>
        </div>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <div class="col-6">
      <%= image_tag "camarera.jpg", size: "450x450", class: "form-img" %>
    </div>
   </div>
  </div>
</div>
