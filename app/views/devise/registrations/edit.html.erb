<div class="container mt-5 w-75 shadow bg-white p-4 rounded mb-5">
  <div class="row">
    <div class="col-6">

      <%= simple_form_for(:user, :url => new_session_path(:user), :method => :post) do |f| %>
      <%# <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-title">
          <h2>Perfil</h2>
        </div>
        <div class="form-inputs">
          <%= f.input :name,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "nombre completo" } %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :address,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "dirección" } %>
          <%# <%= f.input :photo, label: "Foto", %>
          <%= f.input :photo, as: :file,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "carga tu foto de perfil", class:"" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "contraseña" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Guardar", class: "btn btn-primary w-100 mb-3" %>
        </div>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <div class="col-6">
      <%= image_tag "camarera.jpg", size: "450x450", class: "mt-5" %>
    </div>
   </div>
  </div>
</div>
